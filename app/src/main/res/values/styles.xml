<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Tab Layout -->
    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:maxHeight">10dp</item>
        <item name="tabPaddingStart">7dp</item>
        <item name="tabContentStart">5dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="tabPaddingEnd">7dp</item>
        <item name="tabBackground">?attr/selectableItemBackgroundBorderless</item>
        <item name="tabTextColor">@color/white</item>
    </style>

</resources>
