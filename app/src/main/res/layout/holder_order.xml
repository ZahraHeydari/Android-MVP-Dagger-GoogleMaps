<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textAlignment="textStart"
            android:textColor="@color/carbonic"
            android:textSize="@dimen/subheading2" />

        <TextView
            android:id="@+id/order_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_title_text_view"
            android:gravity="start"
            android:layout_margin="8dp"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="@dimen/subheading1" />


        <TextView
            android:id="@+id/order_status_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_address_text_view"
            android:gravity="start"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textAlignment="textStart"
            android:textColor="@color/gray"
            android:textSize="@dimen/subheading1" />

    </RelativeLayout>
</android.support.v7.widget.CardView>